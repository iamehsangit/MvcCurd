@model Employee

<div class="card">
    <div class="card-header bg-primary  text-white">
        <h2 class="card-title">Update User</h2>
    </div>
    <div class="card-body container mt-5">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="Name" />
                </div>
                <div class="form-group col-md-4">
                    <label for="Position">Position</label>
                    <input type="text" asp-for="Position" class="form-control" id="Position" />
                </div>
                <div class="form-group col-md-4">
                    <label for="Salary">Salary</label>
                    <input type="text" asp-for="Salary" class="form-control" id="Salary" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 text-left">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>

</div>
